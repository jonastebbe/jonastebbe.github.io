extends _layouts/base

include _modules/link/link
include _modules/header/header
include _modules/footer/footer

block content
    div.wrapper

        +header

        div.section
            div.section__label
                p About me
                span
            div.section__content
                p
                    | Hey, I’m Jonas and I create digital products.<br />
                    | Check out #[a(href="//liqid.de" target="_blank") LIQID] or #[a(href="//owlhub.co" target="_blank") owlhub] for more.<br />
                    | I’m a UI and UX Design enthusiast and every once in a while I take some #[a(href="/photo") photos].

        div.section
            div.section__label
                p Photos
                span
            div.section__content
                div.photo-grid
                    div.photo-grid__photo
                        div.photo-grid__photo__wrapper
