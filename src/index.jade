extends _layouts/base

include _modules/link/link
include _modules/header/header
include _modules/footer/footer

block content
    div.section
        div.section__label
            p About
            span
        div.section__content
            p
                | Hey, I’m Jonas and I create digital products.<br />
                | Check out some of my #[a(href="/projects"  class="text-link") projects]. I’m a UI and UX Design enthusiast and every once in a while I take some #[a(href="/photo" class="text-link") photos].

    div.section
        div.section__label
            p Photos
            span
        div.section__content
            div.photo-grid
                div.photo-grid__photo
                    div.photo-grid__photo__wrapper
                        img(data-src="images/photos/hamburg.jpg" src="images/photos/hamburg-thumb.jpg" class="b-lazy")
                div.photo-grid__photo
                    div.photo-grid__photo__wrapper
                        img(data-src="images/photos/spo-1.jpg" src="images/photos/spo-1-thumb.jpg" class="b-lazy")
                div.photo-grid__photo
                    div.photo-grid__photo__wrapper
                        img(data-src="images/photos/berlin.jpg" src="images/photos/berlin-thumb.jpg" class="b-lazy")
                div.photo-grid__photo
                    div.photo-grid__photo__wrapper
                        img(data-src="images/photos/prague.jpg" src="images/photos/prague-thumb.jpg" class="b-lazy")
            div.more-link #[a(href="/photo") more photos]

    div.section
        div.section__label
            p Music
            span
        div.section__content
            div.music-grid
                div.music-grid__track
                    div.music-grid__track__wrapper
                        a(href="https://soundcloud.com/butimood/buti-moin-moin-butimoods-1" target="_blank")
                            img(data-src="images/cover/buti-moin.jpg" src="images/cover/buti-moin-thumb.jpg" class="b-lazy")
                div.music-grid__track
                    div.music-grid__track__wrapper
                        a(href="https://soundcloud.com/butimood/buti-anubis-butimoods-2" target="_blank")
                            img(data-src="images/cover/buti-anubis.jpg" src="images/cover/buti-anubis-thumb.jpg" class="b-lazy")
                div.music-grid__track
                    div.music-grid__track__wrapper
                        a(href="https://soundcloud.com/butimoods/neon-butimoods-4" target="_blank")
                            img(data-src="images/cover/buti-neon.jpg" src="images/cover/buti-neon-thumb.jpg" class="b-lazy")
                div.music-grid__track
                    div.music-grid__track__wrapper
                        a(href="https://soundcloud.com/butimoods/slowpoke-butimoods-5" target="_blank")
                            img(data-src="images/cover/buti-slowpoke.jpg" src="images/cover/buti-slowpoke-thumb.jpg" class="b-lazy")
            
    div.section
        div.section__label
            p Contact
            span
        div.section__content.section__content--secondary
            p
                | Want to get in touch?<br />
                | Shoot me a #[a(href="mailto:jonastebbe@googlemail.com" class="text-link") mail] or add me on #[a(href="https://de.linkedin.com/in/jonastebbe" class="text-link" target="_blank") linkedin].