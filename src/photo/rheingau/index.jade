extends ../../_layouts/base

include ../../_modules/header/header
include ../../_modules/footer/footer

block config
  //- Correct base url pathing for this page
  - var baseUrl = '../../'
  - var siteTitle = 'Rheingau 2017'
  - var siteDescription = 'Photos from my Rheingau trip in May 2017'
  - var i = 1

block content
    div.section
        div.section__label
            p About
            span
        div.section__content.section__content--centered
            p
                | Rheingau, Germany<br />
                | May 2017
            div.more-link.more-link--inline #[a(href="/photo") back to albums]

    div.photo-stream
        while i <= 33
            div.photo-stream__photo
                img(data-src="#{baseUrl}images/photos/rheingau-#{i}.jpg" src="#{baseUrl}images/photos/rheingau-#{i++}-thumb.jpg" class="b-lazy")